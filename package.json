{
  "name": "tag-counter",
  "version": "1.0.0",
  "description": "A simple Node.js CLI application built using only core modules, plain callbacks, and asynchronous I/O functions",
  "keywords": [
    "asynchronous",
    "cli-application",
    "es2015",
    "javascript",
    "json-parsing",
    "nodejs"
  ],
  "homepage": "https://github.com/ajtorres9/tag-counter#readme",
  "bugs": "https://github.com/ajtorres9/tag-counter/issues",
  "license": "MIT",
  "author": "Andrew Torres <andrew.jonathan.torres@gmail.com> (https://andrewjtorr.es)",
  "bin": "./cli.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajtorres9/tag-counter.git"
  },
  "scripts": {
    "lint": "yarn lint-files && yarn lint-scripts",
    "lint-files": "prettylint --ignore-path .gitignore '**/*.{json,md,yml}'",
    "lint-scripts": "eslint --cache --ignore-path .gitignore --ignore-pattern '!**/.*' '**/*.js'",
    "test": "yarn test-units",
    "test-units": "jest"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "codecov": "^3.5.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^9.1.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^9.0.1",
    "prettier": "^1.18.2",
    "prettylint": "^1.0.0"
  },
  "engines": {
    "node": ">=10.15.3",
    "yarn": ">=1.16.0"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "jest --bail --findRelatedTests",
        "git add"
      ],
      "*.{json,md,yml}": [
        "prettylint --fix",
        "git add"
      ]
    }
  }
}
